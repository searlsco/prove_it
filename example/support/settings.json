{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "../support/prove_it hook claude:SessionStart"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit|Bash|mcp__.*|EnterPlanMode|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "../support/prove_it hook claude:PreToolUse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "../support/prove_it hook claude:Stop"
          }
        ]
      }
    ]
  }
}
