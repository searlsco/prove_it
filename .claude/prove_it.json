{
  "configVersion": 2,
  "enabled": true,
  "sources": [
    "cli.js",
    "lib/**/*.js",
    "test/**/*.js"
  ],
  "format": {
    "maxOutputChars": 12000
  },
  "hooks": [
    {
      "type": "claude",
      "event": "SessionStart",
      "checks": [
        {
          "name": "local-shim-check",
          "type": "script",
          "command": "./script/check_local_shim",
          "mtime": false
        }
      ]
    },
    {
      "type": "claude",
      "event": "PreToolUse",
      "matcher": "Edit|Write|NotebookEdit|Bash",
      "checks": [
        {
          "name": "lock-config",
          "type": "script",
          "command": "prove_it run_builtin config:lock"
        },
        {
          "name": "require-wip",
          "type": "script",
          "command": "prove_it run_builtin beads:require_wip",
          "when": {
            "fileExists": ".beads"
          }
        }
      ]
    },
    {
      "type": "claude",
      "event": "Stop",
      "checks": [
        {
          "name": "fast-tests",
          "type": "script",
          "command": "./script/test_fast"
        }
      ]
    },
    {
      "type": "git",
      "event": "pre-commit",
      "checks": [
        {
          "name": "full-tests",
          "type": "script",
          "command": "./script/test"
        }
      ]
    }
  ]
}
