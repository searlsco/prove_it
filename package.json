{
  "name": "prove_it",
  "version": "0.56.0",
  "description": "Config-driven hook framework for Claude Code - enforce verified workflows",
  "author": "Justin Searls <justin@searls.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/searlsco/prove_it.git"
  },
  "homepage": "https://github.com/searlsco/prove_it#readme",
  "bugs": {
    "url": "https://github.com/searlsco/prove_it/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "testing",
    "verification",
    "hooks",
    "ai",
    "llm"
  ],
  "bin": {
    "prove_it": "./cli.js"
  },
  "files": [
    "cli.js",
    "lib/",
    "libexec/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "node --test --test-reporter=dot test/*.test.js",
    "test:integration": "node --test --test-reporter=dot $(ls test/integration/*.integration.test.js | grep -v reviewer.integration)",
    "test:reviewer": "node --test --test-reporter=dot test/integration/reviewer.integration.test.js",
    "test:all": "node --test --test-reporter=dot test/*.test.js test/integration/*.integration.test.js"
  },
  "devDependencies": {
    "standard": "^17.1.2"
  }
}
